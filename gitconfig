[core]
	commitGraph = true
[diff]
	algorithm = patience
[gc]
	writeCommitGraph = true
[protocol]
	version = 2
[url "https://github.com/Shopify/"]
	insteadOf = git@github.com:Shopify/
	insteadOf = git@github.com:shopify/
	insteadOf = ssh://git@github.com/Shopify/
	insteadOf = ssh://git@github.com/shopify/
[alias]
	co = checkout
	st = status
	df = diff
	dc = diff --cached
	cam = commit -am
	cameo = commit -a --amend --no-edit
	refresh = !git fetch && git rebase origin/master
[user]
	name = Ben Black
	email = ben.black@shopify.com
